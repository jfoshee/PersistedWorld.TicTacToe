{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gamemaster publish local",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "gamemaster"
            ],
            "options": {
                "cwd": "GameMaster"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "gamemaster publish production",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "gamemaster",
                "https://statemgmt-app.azurewebsites.net"
            ],
            "options": {
                "cwd": "GameMaster"
            },
            "problemMatcher": []
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/PersistedWorld.TicTacToe.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/GameMaster.Tests/GameMaster.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "test",
                "--project",
                "${workspaceFolder}/GameMaster.Tests/GameMaster.Tests.csproj",
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}